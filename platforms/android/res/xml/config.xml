<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ocpanda.test" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="BluetoothLePlugin">
        <param name="android-package" value="com.randdusing.bluetoothle.BluetoothLePlugin" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="File">
        <param name="android-package" value="org.apache.cordova.file.FileUtils" />
        <param name="onload" value="true" />
    </feature>
    <allow-navigation href="cdvfile:*" />
    <feature name="UniversalAnalytics">
        <param name="android-package" value="com.danielcwilson.plugins.analytics.UniversalAnalyticsPlugin" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <name>HakkaTourSystem</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <icon density="mdpi" src="www/image/android/mdpi.png" />
    <icon density="hdpi" src="www/image/android/hdpi.png" />
    <icon density="xhdpi" src="www/image/android/xhdpi.png" />
    <icon density="xxhdpi" src="www/image/android/xxhdpi.png" />
    <icon density="xxxhdpi" src="www/image/android/xxxhdpi.png" />
    <splash density="land-hdpi" src="www/image/android/splash-land-hdpi.png" />
    <splash density="land-ldpi" src="www/image/android/splash-land-ldpi.png" />
    <splash density="land-mdpi" src="www/image/android/splash-land-mdpi.png" />
    <splash density="land-xhdpi" src="www/image/android/splash-land-xhdpi.png" />
    <splash density="port-hdpi" src="www/image/android/splash-port-hdpi.png" />
    <splash density="port-ldpi" src="www/image/android/splash-port-ldpi.png" />
    <splash density="port-mdpi" src="www/image/android/splash-port-mdpi.png" />
    <splash density="port-xhdpi" src="www/image/android/splash-port-xhdpi.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="orientation" value="portrait" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="ShowSplashScreenSpinner" value="false" />
</widget>
